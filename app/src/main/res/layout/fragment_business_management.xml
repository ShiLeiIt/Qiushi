<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buy_bg"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <include
                android:id="@+id/refrigeration"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/fresh"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/cleaning"
                layout="@layout/layout_management_item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <include
                android:id="@+id/standby"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/thaw"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/pasteurization"
                layout="@layout/layout_management_item" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <include
                android:id="@+id/regeneration"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/operation"
                layout="@layout/layout_management_item" />

            <include
                android:id="@+id/discharging"
                layout="@layout/layout_management_item" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:src="@drawable/management_bottom" />

</RelativeLayout>